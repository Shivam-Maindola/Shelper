<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Our Seniors Our love"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="#000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/s_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NGOs"
            android:textSize="15dp"
            android:textColorHint="@color/colorPrimary"
            android:textColor="#000" />
        <Button
            android:id="@+id/s_places"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Places to visit"
            android:textSize="15dp"
            android:textColor="#000" />
        <Button
            android:id="@+id/s_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activities to do"
            android:textSize="15dp"
            android:textColor="#000" />
        <Button
            android:id="@+id/s_entertainment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entertainment section"
            android:textSize="15dp"
            android:textColor="#000" />
        <Button
            android:id="@+id/s_homes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Old age home finder"
            android:textSize="15dp"
            android:textColor="#000" />

        <Button
            android:id="@+id/s_gov"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Government schemes"
            android:textSize="15dp"
            android:textColor="#000" />
        <Button
            android:id="@+id/s_dating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dating"
            android:textSize="15dp"
            android:textColor="#000" />
        <Button
            android:id="@+id/s_donate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Donate Now"
            android:textSize="15dp"
            android:textColor="#000" />

    </LinearLayout>

</LinearLayout>